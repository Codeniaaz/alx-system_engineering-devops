
#!/usr/bin/env bash
#ckage repositories
sudo apt-get update

# Install Nginx
sudo apt-get -y install nginx

# Configure firewall to allow requests through port 80
sudo ufw allow 'Nginx HTTP'

# Create directories and set permissions
sudo mkdir -p /var/www/html
sudo chmod -R 755 /var/www

# Create the index page
echo 'Hello World!' | sudo tee /var/www/html/index.html

# Create a custom 404 page
echo "This is not the page you're looking for." | sudo tee /var/www/html/404.html

# Configure Nginx to include custom HTTP response header
custom_header_config="add_header X-Served-By \$hostname;"
sudo sed -i "s/# server_name _;/server_name _;\n\t$custom_header_config/" /etc/nginx/nginx.conf

# Restart Nginx to apply changes
sudo systemctl restart nginx
